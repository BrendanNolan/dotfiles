[core]
	editor = nvim
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[alias]
    a = add

    br = branch
    bs = branch --sort -committerdate
    
    cane = commit --amend --no-edit
    
    co = checkout
    
    cm = commit
    cadn = commit --amend --date=now --no-edit
    
    d = diff
    dno = diff --name-only

    dc = diff --cached
    dnoc = diff --name-only --cached 

    dht = diff HEAD~
    dnoht = diff --name-only HEAD~
    
    pfo = push --force origin
    
    # Pretty Log
    pl = log --pretty=oneline --abbrev-commit
    # Preety Log Verbose
    plv = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>' --abbrev-commit
    
    rc = rebase --continue
    rhh = reset --hard HEAD

    s = status
    st = status

[push]
    default = current

